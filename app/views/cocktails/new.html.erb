<div class="container my-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h3>Add a new cocktail</h3>
      <%= form_for(@cocktail) do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <%= f.submit 'Add new cocktail', class:'btn btn-primary btn-block' %>
      <% end %>
      <div class="my-3">
        <%= link_to 'Back to cocktails list', cocktails_path %>
      </div>
    </div>
  </div>
</div>

