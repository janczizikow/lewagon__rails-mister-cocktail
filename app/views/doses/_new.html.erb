<%= form_for [cocktail, dose] do |f| %>
  <div class="form-group">
      <%= f.label :ingredient, 'Ingredient' %>
      <%= f.collection_select :ingredient, Ingredient.all, :id, :name, { prompt: true }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Dosege' %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <%= f.submit 'Add ingredient', class: 'btn btn-primary btn-block' %>
<% end %>